@page "{id:int}"
@model WEB_0535005_Vashkevich.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Album.Id" />
            <div class="form-group">
                <label asp-for="Album.Name" class="control-label"></label>
                <input asp-for="Album.Name" class="form-control" />
                <span asp-validation-for="Album.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Description" class="control-label"></label>
                <input asp-for="Album.Description" class="form-control" />
                <span asp-validation-for="Album.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Price" class="control-label"></label>
                <input asp-for="Album.Price" class="form-control" />
                <span asp-validation-for="Album.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Duration" class="control-label"></label>
                <input asp-for="Album.Duration" class="form-control" />
                <span asp-validation-for="Album.Duration" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Album.Image">Edit Image:</label>
                <input type="file" name="file" id="file" /><br><br>
            </div>
            <div class="form-group">
                <label asp-for="Album.Category.Id" class="control-label"></label>
                <input asp-for="Album.Category.Id" class="form-control" />
                <span asp-validation-for="Album.Category.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

}
