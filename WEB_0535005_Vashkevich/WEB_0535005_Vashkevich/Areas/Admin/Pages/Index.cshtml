@page
@model WEB_0535005_Vashkevich.Areas.Admin.Pages.IndexModel
@using WEB_0535005_Vashkevich.Entities
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> SignInManager


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (User.IsInRole("admin"))
    {
        <p>
            <a class="btn btn-outline-success" asp-page="Create" style="text-decoration: none;">
                <i class="icon-plus-sign"></i>Добавить
            </a>    
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Album[0].Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Album[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Album[0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Album[0].Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Album[0].Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Album[0].Category)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Album)
                {
                    <tr>
                        <td>
                            <img src="~/images/albums/@item.Image" width="80px" height="80px" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" style="text-decoration: none;"> 
                                <i class="fas fa-edit" style="color:blue"></i>
                            </a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">
                                <i class="fa-sharp fa-solid fa-ban" style="color: red"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>Permission denied.</h1>
    }
}

